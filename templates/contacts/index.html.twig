{% extends 'base.html.twig' %}

{% block title %}Hello ContactsController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="contacts-wrapper">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <h1>Contacts</h1>

        {{ form_errors(contactsForm) }}

        {{ form_start(contactsForm) }}
        <div class="form-item">
            {{ form_row(contactsForm.title) }}
        </div>
        <div class="form-item">
            {{ form_row(contactsForm.body, {
                label: 'Message'
            }) }}
        </div>
        <div class="form-item">
            {{ form_row(contactsForm.email) }}
        </div>
        <div class="form-item">
            <button type="submit" class="btn">Send</button>
            {{ form_end(contactsForm) }}
        </div>

    </div>
{% endblock %}
